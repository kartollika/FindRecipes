<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.App.Main" parent="Theme.App.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurface">@android:color/white</item>

        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="textInputStyle">@style/App.TextField</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="chipStyle">@style/ChoiceChip</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

</resources>