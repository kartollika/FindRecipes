    <style name="ApplyButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="App.TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
    </style>

    <style name="ChoiceChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="chipBackgroundColor">@color/chip_accent_background_color_selector</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:elevation">4dp</item>
        <item name="chipStrokeColor">@android:color/darker_gray</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChipNotSelectable" parent="ChoiceChip">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:state_checked">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Body1</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
