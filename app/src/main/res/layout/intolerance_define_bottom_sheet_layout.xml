<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/upper_rounded_white_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Define your intolerance"
        android:textSize="18sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <kartollika.recipesbook.common.ui.AdaptableChipGroup
            android:id="@+id/defineIntolerancesChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </kartollika.recipesbook.common.ui.AdaptableChipGroup>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/intoleranceDefineApplyAction"
        android:layout_width="match_parent"
        style="@style/ApplyButton"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Apply" />
</LinearLayout>